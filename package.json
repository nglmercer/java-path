{
  "name": "java-path",
  "repository": {
    "type": "git",
    "url": "https://github.com/nglmercer/java-path"
  },
  "homepage": "https://github.com/nglmercer/java-path#readme",
  "bugs": {
    "url": "https://github.com/nglmercer/java-path/issues"
  },
  "version": "1.0.5",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "private": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "bun test --timeout 30000",
    "dev": "bun --hot src/index.ts",
    "typecheck": "bunx tsc --noEmit",
    "build": "tsc --outDir dist",
    "publish": "npm run test && npm run build && npm publish",
    "prepublishOnly": "bun run build",
    "example": "bun run examples/basic-usage.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "node-task-manager": "^2.1.5"
  },
  "license": "MIT"
}
